<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="330dp"
	android:layout_height="430dp"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_gravity="center">

	<com.github.florent37.shapeofview.shapes.CircleView
        android:elevation="5dp"
        android:id="@+id/home_activity_v2"
        android:layout_width="65dp"
        android:layout_height="65dp"
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true"
        android:background="@drawable/bg_view_circle"
		app:shape_circle_borderColor="@color/bgPrimary"
		app:shape_circle_borderWidth="5dp"
        android:gravity="center" >


		<ImageView
			android:src="@drawable/icon_airplane"
			android:id="@+id/airplane_icon"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center_horizontal"/>
	</com.github.florent37.shapeofview.shapes.CircleView>


<RelativeLayout 
    android:layout_width="330dp"
    android:layout_height="400dp"
    android:elevation="1dp"
        android:layout_marginTop="25dp" 
    android:background="@drawable/bg_layout_white"
    android:id="@+id/popup_nofunds_bg"
    android:layout_gravity="center">

    <TextView
		android:fontFamily="@font/mregular"
        android:id="@+id/popup_ticket_tv1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/bluePrimary"
        android:textSize="30sp" />
    
        <TextView 
        android:layout_marginStart="11dp"
        android:layout_marginTop="14dp"
	    android:layout_below="@+id/popup_ticket_tv1"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:id="@+id/popup_ticket_tv2"
	        android:textColor="@color/blackPrimary"
	        android:text="@string/maskapai"
			android:fontFamily="@font/mregular"
	        android:textSize="20sp"/>       
		
            
			<TextView
				android:fontFamily="@font/mlight"
        		android:layout_marginStart="11dp"
	        	android:id="@+id/popup_ticket_tv3"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textColor="@color/greyPrimary"
				android:text="@string/maskapai_pick"
	   			android:layout_below="@+id/popup_ticket_tv2"
		        android:textSize="16sp"/> 
        
    <RadioGroup
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
	    android:layout_below="@+id/popup_ticket_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogroup0"
		android:checkedButton="@+id/maskapainbtn0"
        android:orientation="horizontal">
	<RadioButton
		android:fontFamily="@font/mregular"
	    android:id="@+id/maskapainbtn0"
        android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
        android:background="@drawable/radio_btn"
        android:button="@color/transparant"
		android:checked="true"
        android:textColor="@color/blackPrimary"
        android:textSize="18sp"
        android:gravity="center"/>
	<RadioButton
		android:fontFamily="@font/mregular"
	    android:layout_marginStart="16dp"
	    android:id="@+id/maskapainbtn1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/radio_btn"
        android:button="@color/transparant"
        android:textColor="@color/blackPrimary"
        android:textSize="18sp"
        android:gravity="center"/>
	<RadioButton
		android:fontFamily="@font/mregular"
	    android:layout_marginStart="16dp"
	    android:id="@+id/maskapainbtn2"
        android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
        android:background="@drawable/radio_btn"
        android:button="@color/transparant"
        android:textColor="@color/blackPrimary"
        android:textSize="18sp"
        android:gravity="center"/>
	
    </RadioGroup>
    
    
		<View 
			android:layout_marginStart="11dp"
		    android:layout_marginTop="16dp"
		    android:layout_marginBottom="16dp"
		    android:background="@color/div"
	        android:layout_height="1dp"
	    	android:layout_below="@+id/radiogroup0"
	        android:id="@+id/popup_ticket_div"
	        android:layout_width="match_parent"/>

	<TextView
		android:id="@+id/popup_ticket_tv4"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/popup_ticket_div"
		android:layout_marginStart="11dp"
		android:fontFamily="@font/mregular"
		android:text="@string/flight_depature"
		android:textColor="@color/blackPrimary"
		android:textSize="20sp" />
		
            
			<TextView
				android:fontFamily="@font/mlight"
        		android:layout_marginStart="11dp"
	        	android:id="@+id/popup_ticket_tv5"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textColor="@color/greyPrimary"
				android:text="@string/flight_depature_info"
	    		android:layout_below="@+id/popup_ticket_tv4"
		        android:textSize="16sp"/> 
        
    <RadioGroup
		android:checkedButton="@+id/tglbtn0"
        android:layout_marginStart="11dp"
        android:layout_marginTop="16dp"
	    android:layout_below="@+id/popup_ticket_tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radiogroup1"
        android:orientation="horizontal">
	<RadioButton
		android:fontFamily="@font/mregular"
	    android:id="@+id/tglbtn0"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
		android:paddingRight="10dp"
        android:background="@drawable/radio_btn"
        android:button="@color/transparant"
        android:checked="true"
        android:textColor="@color/blackPrimary"
        android:textSize="18sp"
        android:gravity="center"/>
	<RadioButton
		android:fontFamily="@font/mregular"
	    android:layout_marginStart="16dp"
	    android:id="@+id/tglbtn1"
        android:layout_width="wrap_content"
         android:layout_height="30dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
        android:background="@drawable/radio_btn"
        android:button="@color/transparant"
        android:textColor="@color/blackPrimary"
        android:textSize="18sp"
        android:gravity="center"/>
	
    </RadioGroup>
    	<LinearLayout
			android:layout_marginLeft="11dp"
			android:id="@+id/tv_linear_exp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/radiogroup1"
			android:orientation="horizontal">
		<TextView
	        android:id="@+id/popup_ticket_tv6"
		    android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/greyPrimary"
			android:layout_marginTop="10dp"
			android:fontFamily="@font/mlight"
			android:text="The Tickets will expire on : "
			android:textSize="16sp"/>
			<TextView
				android:id="@+id/exp_tv"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textColor="@color/redPrimary"
				android:layout_marginTop="10dp"
				android:fontFamily="@font/mregular"
				android:textSize="16sp"/>
		</LinearLayout>
	<LinearLayout
		android:layout_below="@+id/tv_linear_exp"
		android:layout_marginLeft="11dp"
		android:id="@+id/tv_linear_go"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/ticket_go"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/greyPrimary"
			android:layout_marginTop="10dp"
			android:fontFamily="@font/mlight"
			android:text="You will go on : "
			android:textSize="16sp"/>
		<TextView
			android:id="@+id/ticket_go_on"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/greenPrimary"
			android:layout_marginTop="10dp"
			android:fontFamily="@font/mregular"
			android:textSize="16sp"/>
		<TextView
			android:id="@+id/ticket_time_buy"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/greenPrimary"
			android:layout_marginTop="10dp"
			android:fontFamily="@font/mregular"
			android:visibility="gone"
			android:textSize="0sp"/>
		<TextView
			android:id="@+id/ticket_time_go_on"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/greenPrimary"
			android:layout_marginTop="10dp"
			android:fontFamily="@font/mregular"
			android:visibility="gone"
			android:textSize="0sp"/>
		<TextView
			android:id="@+id/pesawat"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textColor="@color/greenPrimary"
			android:layout_marginTop="10dp"
			android:fontFamily="@font/mregular"
			android:visibility="gone"
			android:textSize="0sp"/>
	</LinearLayout>
	<Button
		android:id="@+id/buy"
		android:layout_width="wrap_content"
		android:layout_height="55dp"
		android:layout_below="@+id/tv_linear_go"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="10dp"
		android:background="@drawable/bg_btn_blue_primary"
		android:fontFamily="@font/mregular"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:text="@string/buy_btn"
		android:textColor="@color/white"
		android:textSize="20sp" />

	</RelativeLayout>
</RelativeLayout>